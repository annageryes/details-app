pipeline{
    agent {label 'workers'} // needs to have ssh agent
    parameters{
        string(name: 'sleep_time', defaultValue:'2', description:'time to sleep')
    }
    stages{
        
           stage('spellcheck'){
            steps{
                echo 'check code spell check'
                sleep "${sleep_time}"
                sh '''
	            codespell /home/jenkins/workspace/spellcheck/* > output_codespell.txt
                cat output_codespell.txt
                '''
            } //error with artifact
        }

    }
}


